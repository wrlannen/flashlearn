
# AI Provider Configuration
# Options: 'openai' (default) or 'gemini'
AI_PROVIDER=openai

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Optional: Specify OpenAI model (defaults to gpt-4o if not set)
OPENAI_MODEL=gpt-4o
# Cost per 1M tokens (USD)
OPENAI_INPUT_COST_PER_MILLION=2.50
OPENAI_OUTPUT_COST_PER_MILLION=10.00

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
# Optional: Specify Gemini model (defaults to gemini-2.5-flash if not set)
GEMINI_MODEL=gemini-2.5-flash
# Cost per 1M tokens (USD)
GEMINI_INPUT_COST_PER_MILLION=0.30
GEMINI_OUTPUT_COST_PER_MILLION=2.50

# Server Configuration
# Optional: Server port (defaults to 3000 if not set)
PORT=3000

# Security Configuration
# Optional: Allowed CORS origins (comma-separated, defaults to '*' if not set)
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# ALLOWED_ORIGINS=*

# Optional: Environment (development/production)
# NODE_ENV=production

# Optional: Log level (debug, info, warn, error)
# LOG_LEVEL=info
